generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:.dev.db"
}
model User {
  id           String @id @default(uuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  username     String
  passwordHash String
  todoList     Todo[]
}
model Todo {
  id         String   @id @default(uuid())
  userid     String 
  user       User  @relation(fields: [userid], references: [id],onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  name       String
  completed  Boolean
}
